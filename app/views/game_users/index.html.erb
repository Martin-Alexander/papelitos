
<!-- SMALL PAPELITOS LOGO -->
<%= image_tag "papelitos_logo.png", class: "small_logo" %>

<div class="d-flex justify-content-between">
  <div class="card-team-player"> <!-- card for team 1 -->
    <div class="card-header">
      <h1>Team 1</h1>
      <%= image_tag "papelitos_logo.png", class: "small_logo" %>
    </div>
    <!-- loop over users of team 1 -->
    <div class="card-team">
      <% @game_users.each do |u| %>
        <% if u.game_team == @game.game_teams.first %>
          <li><%= u.user.name %></li>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="card-team-player"> <!-- card for team 2 -->
    <div class="card-header">
      <h1>Team 2</h1>
      <%= image_tag "papelitos_logo.png", class: "small_logo" %>
    </div>
    <!-- loop over users of team 2 -->
    <div class="card-team">
    <% @game_users.each do |u| %>
      <% if u.game_team == @game.game_teams.second %>
        <li><%= u.user.name %></li>
      <% end %>
    <% end %>
    </div>
  </div>
</div>


<!-- START BUTTON -->
<% if @game_user == 1 %>
  <%= link_to "START", game_path(@game.id), class: 'buttons' %>
<% end %>
